#include <iostream>
#include <string>
using namespace std;
int stringLength(const string& str) {
    int length = 0;
    while (length < str.size() && str[length] != '\0') {
        length++;
    }
    return length;
}

int main() {
    string input;
    cout << "Enter the line: ";
    getline(cin, input);
    int length = stringLength(input);
    cout << "Line length: " << length<<"\n" ;
    cout << "Line :  "<< input ;
    
    return 0;
}
